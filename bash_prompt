
_PS1=$PS1

function bp_git_is_clean() {
  git diff --quiet --ignore-submodules HEAD 2>/dev/null
}

function bp_git_prompt() {
  local branch="`git branch --no-color 2>/dev/null`" 
  if [ -n "$branch" ]; then
    branch=${branch:1}
    [[ "$branch" == " master" ]] && branch=''
    branch="â–ª$branch "
    if bp_git_is_clean; then
      local ansi=32
    else
      local ansi=31
    fi
    echo -n -e '\\[\e[00;'${ansi}'m\\]'$branch'\\[\e[00m\\]'
  fi
}

function bp_node_prompt() {
  local ver=`node -v`
  echo -n -e '\\[\e[00;32m\\]n'${ver:1} '\\[\e[00m\\]'
}

function bp_cwd() {
  echo -n -e '\\[\033]2;\w\033\\\\\\]'
}

function bp_prompt() {
  PS1="`bp_cwd;bp_git_prompt;bp_node_prompt`$_PS1"
}

PROMPT_COMMAND=bp_prompt

